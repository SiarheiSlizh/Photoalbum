@{
    ViewBag.Title = "Home Page";
}

<style type="text/css">
    h2 {
        margin: 0;
        color: #666;
        padding-top: 90px;
        font-size: 52px;
        font-family: "trebuchet ms", sans-serif;
    }

    .carousel {
        margin-top: 20px;
    }
</style>

<div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="active item">
            <img src="~/Images/photo1.jpg" style="width: 100%"/>
            <div class="carousel-caption">
                <h3>Take pictures and share with you friends</h3>
                <p></p>
            </div>
        </div>
        <div class="item" display>
            <img src="~/Images/photo2.jpg" style="width: 100%"/>
            <div class="carousel-caption">
                <h3>Show your сheerful and eventful life</h3>
                <p></p>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/zjoZMY28cRo.jpg" style="width: 100%"/>
            <div class="carousel-caption">
                <h3>More wonderful pictures</h3>
                <p></p>
            </div>
        </div>
    </div>
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
